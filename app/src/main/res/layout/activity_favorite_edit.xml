<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context=".ui.FavoriteEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_editImage"
                android:layout_centerHorizontal="true"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:src="@drawable/icon"
                android:layout_margin="15dp"/>

            <TextView
                android:layout_below="@id/img_editImage"
                android:id="@+id/tv_editTitle"
                android:layout_width="wrap_content"
                android:text="Title"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_below="@id/tv_editTitle"
                android:id="@+id/txt_editTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_text"
                android:hint="Title"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:layout_below="@id/txt_editTitle"
                android:id="@+id/tv_editDescription"
                android:layout_width="wrap_content"
                android:text="Description"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="15dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/txt_editDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_text"
                android:hint="Description"
                android:paddingLeft="10dp"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="100"
                android:gravity="top|left"
                android:paddingRight="10dp"
                android:scrollbars="vertical"
                android:layout_below="@id/tv_editDescription"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:layout_below="@id/txt_editDescription"
                android:id="@+id/tv_editVote"
                android:layout_width="wrap_content"
                android:text="Rating"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="15dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/txt_editVote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:inputType="numberDecimal"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_text"
                android:hint="Rating"
                android:layout_below="@id/tv_editVote"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:layout_below="@id/txt_editVote"
                android:id="@+id/tv_editDate"
                android:layout_width="wrap_content"
                android:text="Release Date"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="15dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/txt_editDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_text"
                android:hint="Release Date"
                android:layout_below="@id/tv_editDate"
                android:inputType="date"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />

            <Button
                android:id="@+id/btn_edit"
                android:layout_below="@id/txt_editDate"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:text="Edit"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>