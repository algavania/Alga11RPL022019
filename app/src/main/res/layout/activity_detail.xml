<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailActivity"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_detailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moonlight Melody"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/coolvetica"
                android:gravity="center_horizontal" />

            <androidx.cardview.widget.CardView
                android:id="@+id/detail_cardView"
                android:layout_below="@id/tv_detailTitle"
                android:layout_marginTop="15dp"
                android:layout_width="150dp"
                android:layout_height="220dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/img_detailImage"
                    android:src="@drawable/icon"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_detailDate"
                android:layout_below="@id/detail_cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Release: 2020-07-15"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/coolvetica"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/tv_detailVote"
                android:layout_below="@id/tv_detailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: 7.2 of 10"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/coolvetica"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/tv_detailFavorite"
                android:layout_below="@id/tv_detailVote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is your favorite movie!"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/coolvetica"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/tv_detailDescription"
                android:layout_below="@id/tv_detailFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="Description"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:fontFamily="@font/roboto"/>

            <Button
                android:layout_below="@id/tv_detailDescription"
                android:id="@+id/btn_detailFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:textColor="@android:color/white"
                android:text="Remove from Favorites"
                android:layout_marginBottom="30dp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>